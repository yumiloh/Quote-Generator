<Window x:Class="Quote_Generator_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quote_Generator_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="750" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="795"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Quote Generator" HorizontalAlignment="Left" Margin="282,14,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="24" BorderThickness="0" Height="38" Width="171" Grid.Column="1"/>
        <Label Content="Position of quote: " Margin="123,170,0,0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="InputQuoteText" Text="" TextWrapping="Wrap" FontFamily="Times New Roman" Height="22" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,87,0,0" Grid.Column="1"/>
        <Label Content="Input quote:" Margin="123,84,0,0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Input picture path: " Margin="123,130,0,0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="Preview" Content="Preview image" HorizontalAlignment="Left" Margin="381,290,0,0" VerticalAlignment="Top" Click="Preview_Button_Click" Height="22" Width="90" Grid.Column="1"/>
        <Button Name="ShareViaEmail" Content="Share via email" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Width="90" Grid.Column="1" Margin="381,581,0,0" IsEnabled="False" Click="ShareViaEmail_ButtonClicked"/>
        <TextBox Name="EmailAddressInput" Text="" TextWrapping="Wrap" FontFamily="Times New Roman" Height="22" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,377,0,0" Grid.Column="1" IsEnabled="False"/>
        <Label Content="Email address: " Margin="123,377,0,0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Email subject: " Margin="123,428,0,0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="EmailHeaderInput" Text="" TextWrapping="Wrap" FontFamily="Times New Roman" Height="22" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,431,0,0" Grid.Column="1" IsEnabled="False"/>
        <Label Content="Email body: " Margin="123,505,0,0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="EmailBodyInput" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Text="" TextWrapping="Wrap" Height="80" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,480,0,0" Grid.Column="1" IsEnabled="False"/>
        <TextBox Name="XCoordinateInput" HorizontalAlignment="Left" Height="22" Margin="512,170,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" 
            Width="58" FontFamily="Times New Roman" Grid.Column="1" IsEnabled="False"/>
        <TextBox Name="YCoordinateInput" HorizontalAlignment="Left" Height="22" Margin="512,210,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" 
            Width="58" FontFamily="Times New Roman" RenderTransformOrigin="0.25,1.611" Grid.Column="1" IsEnabled="False"/>
        <Button Name="Browse" Content="Browse" Grid.Column="1" HorizontalAlignment="Left" Margin="528,135,0,0" VerticalAlignment="Top" Click="Browse_Button_Click"/>
        <TextBox Name="PicturePath" Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="315,135,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" IsEnabled="False"/>
        <Label Content="Font size [20-40]: " Margin="123,240,0,0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="FontSize" HorizontalAlignment="Left" Height="22" Margin="315,243,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" 
            Width="105" FontFamily="Times New Roman" Grid.Column="1"/>
        <ComboBox Name="toContinue" Grid.Column="1" HorizontalAlignment="Left" Margin="315,333,0,0" VerticalAlignment="Top" Width="120" IsEnabled="False">            
            <ComboBoxItem Content="Yes"></ComboBoxItem>
            <ComboBoxItem Content="No"></ComboBoxItem>
        </ComboBox>
        <Label Content="Would you like to continue?" Grid.Column="1" HorizontalAlignment="Left" Margin="123,333,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="XCoordinateTextBlock" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="315,170,0,0" Text="X-Coordinate:" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <TextBlock Name="YCoordinateTextBlock" Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="315,210,0,0" Text="Y-Coordinate:" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <Button Name="ToConfirm" Content="Confirm" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="477,335,0,0" VerticalAlignment="Top" Click="ToConfirm_Click" IsEnabled="False"/>

    </Grid>
</Window>
